<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_principal"
    tools:context=".ui.infoagentes.infophoenix">

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="731dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="133dp"
                android:layout_height="134dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/iconophoenix"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="150dp"
                android:layout_height="64dp"
                android:layout_marginTop="28dp"
                android:text="PHOENIX"
                android:textColor="@color/blanco_valorant"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="244dp"
                android:layout_height="199dp"
                android:layout_marginTop="116dp"
                android:text="Jamie Adeyemi es un Radiant proveniente del distrito de Peckham en Londres, Inglaterra. Al crecer, Adeyemi asistió a una escuela de artes escénicas en el área, pero luego fue suspendida. Reclutado en el Protocolo VALORANT como su noveno agente , phoenix , Adeyemi estuvo muy involucrado en las actividades del Protocolo desde el 10 AFL en adelante."
                android:textAlignment="textStart"
                android:textColor="@color/blanco_valorant"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="379dp"
                android:layout_height="240dp"
                android:layout_marginTop="4dp"
                android:text="Con mucha información que se le ocultó y que necesitaba saber como un recluta reciente, no pudo evitar la detonación de una spyke en Venecia mientras estaba en una misión en solitario. Phoenix tuvo otra oportunidad de detener uno al día siguiente cuando ocurrió otro ataque en Rabat , y fue aquí donde se encontró cara a cara por primera vez con el único perpetrador, su propia contraparte Omega .. Frustrado por lo mucho que se mantenía en la oscuridad, a pesar de que esta vez evitó la detonación con la ayuda de un equipo, Phoenix finalmente se enteró de la amenaza que representaba Omega Earth."
                android:textAlignment="textStart"
                android:textColor="@color/blanco_valorant"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.448"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="53dp"
                android:layout_height="31dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="32dp"
                android:text="ROL"
                android:textColor="@color/rojo_valorant"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="192dp"
                android:layout_height="35dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:text="NACIONALIDAD"
                android:textColor="@color/rojo_valorant"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="113dp"
                android:layout_height="108dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:srcCompat="@drawable/claseduelista" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="189dp"
                android:layout_height="106dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:srcCompat="@drawable/banderareinounido" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="196dp"
                android:layout_height="53dp"
                android:layout_marginTop="50dp"
                android:text="HABILIDADES"
                android:textColor="@color/rojo_valorant"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="99dp"
                android:layout_height="25dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="108dp"
                android:text="llamarada"
                android:textColor="@color/rojo_valorant"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="128dp"
                android:layout_height="141dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:srcCompat="@drawable/llamaradaphoenix" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="249dp"
                android:layout_height="140dp"
                android:layout_marginTop="44dp"
                android:text="Equipa una pared de llamas. Dispara para crear una línea de llamas que avanza hacia adelante, lo que crea una pared de fuego que bloquea la visión e inflige daño a los jugadores enemigos la atraviesen. Mantén pulsado disparar para curvar la pared en la dirección de la mira."
                android:textColor="@color/blanco_valorant"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                app:srcCompat="@drawable/bolacurvaphoenix" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="80dp"
                android:text="bola curva"
                android:textColor="@color/rojo_valorant"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="252dp"
                android:layout_height="200dp"
                android:layout_marginTop="80dp"
                android:text="Equipa un orbe fulgurante que dibuja una trayectoria curva y explota poco después de haberlo lanzado, impidiendo la visión. Dispara para lanzar el orbe fulgurante hacia la izquierda, lo que hace que detone y ciegue a cualquier jugador que lo vea. Puedes alternar entre click derecho y click izquierdo para alternar la direccion en la que ira la bola curva (izquierda o derecha)."
                android:textColor="@color/blanco_valorant"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="126dp"
                android:layout_height="129dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14"
                app:srcCompat="@drawable/combustionphoenix" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="121dp"
                android:layout_height="33dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="88dp"
                android:text="combustion"
                android:textColor="@color/rojo_valorant"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="240dp"
                android:layout_height="147dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="20dp"
                android:text="Equipa una bola de fuego. Dispara para lanzar una bola de fuego que explota transcurrido un tiempo determinado o al impactar contra el suelo, lo que crea una zona de fuego persistente que inflige daño a los enemigos. el fuego regenera la salud de phoenix."
                android:textColor="@color/blanco_valorant"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:srcCompat="@drawable/cenizasphoenix" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="56dp"
                android:text="cenizas"
                android:textColor="@color/rojo_valorant"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="246dp"
                android:layout_height="141dp"
                android:layout_marginStart="133dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="89dp"
                android:text=" Coloca instantáneamente un marcador en la ubicación de Phoenix. Mientras esta habilidad esté activa, morir o dejar que se agote el temporizador hace que se termine la habilidad y devuelve a Phoenix a esta ubicación con toda la vida."
                android:textColor="@color/blanco_valorant"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.625"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="70dp"
                android:layout_height="46dp"
                android:layout_marginTop="36dp"
                android:text="PASIVA"
                android:textColor="@color/rojo_valorant"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="332dp"
                android:layout_height="117dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="31dp"
                android:text="la pasiva de phoenix consiste en la regeneracion de vida mediante el uso de llamarada y combustion, al momento de ponerte en contacto con el fuego de estas habilidades tu vida se ira regenerando gradualmente hasta terminarse las habilidfades antes mencionadas"
                android:textColor="@color/blanco_valorant"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>